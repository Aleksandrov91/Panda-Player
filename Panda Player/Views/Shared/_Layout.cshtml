<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Panda Player", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Upload Song", "Upload", "Songs")</li>
                        <li>@Html.ActionLink("My Song", "Index", "Songs")</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="footer row">
                <div class="widget-panel left col-sm-4">
                    <div class="widgets-wrapper">
                        <div class="widgets widgets">
                            <div id="nav_menu-18" class="widget clearfix widget_nav_menu">
                                <div class="header clearfix"><h3>About</h3></div>
                                <div class="menu-valenti-footer-menu-container">
                                    <ul id="menu-valenti-footer-menu" class="menu">
                                        <li id="menu-item-41550" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-home menu-item-41550">@Html.ActionLink("Home", "Index", "Home")
                                        <li id="menu-item-41551" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-41551">@Html.ActionLink("Contact us", "", "")
                                        <li id="menu-item-41554" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-41554">@Html.ActionLink("Terms of Service", "", "")
                                        <li id="menu-item-41552" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-41552">@Html.ActionLink("Privacy Policy", "", "")
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-panel mid col-sm-4">
                    <div class="widgets-wrapper">
                        <div class="widgets widgets">
                            <div id="nav_menu-19" class="widget clearfix widget_nav_menu">
                                <div class="header clearfix"><h3>Contact Us</h3></div>
                                <div class="menu-advertise-container">
                                    <ul id="menu-advertise" class="menu">
                                        <ul>
                                            <li><a href="https://www.facebook.com/profile.php?id=100016119730958/"><img src="\Content\Images\Logos\facebook_icon.png" alt="Facebook" width="50" height="50"></a></li>
                                            <li class="last"><a href="https://www.linkedin.com/in/coding-pandas-96a1bb139/?locale=en_US/"><img src="\Content\Images\Logos\linkedin_icon.png" alt="LinkedIn"width="50" height="50"></a></li>
                                            <li><a href="http://instagram.com/"><img src="\Content\Images\Logos\instagram_icon.png" alt="Instagram"width="50" height="50"></a></li>
                                            <li class="last"><a href="https://twitter.com/coding_pandas"><img src="\Content\Images\Logos\twitter_icon.png" alt="Twitter"width="50" height="50" alt="twitter"></a></li>
                                        </ul>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="widget-panel right col-sm-4">
                    <div class="widgets-wrapper">
                        <div class="widgets widgets">
                            <div id="nav_menu-20" class="widget clearfix widget_nav_menu">
                                <div class="header clearfix"><h3>Who Are We?</h3></div>
                                <div class="menu-our-team-2-container">
                                    <ul id="menu-our-team-2" class="menu">
                                        <li id="menu-item-62861" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-62861">@Html.ActionLink("About Us", "", "")
                                        <li id="menu-item-59976" class="menu-item menu-item-type-custom menu-item-object-custom menu-item-59976"><a href="https://github.com/orgs/">Our GitHub</a></li>
                                        <li id="menu-item-59975" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-59975"><a href="https://softuni.bg/trainings/1511/software-technologies-february-2017">Our Course</a></li>
                                        <li id="menu-item-69402" class="menu-item menu-item-type-post_type menu-item-object-page menu-item-69402"><a href="https://softuni.bg/">SoftUni</a></li>
                                    </ul>
                                </div>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
