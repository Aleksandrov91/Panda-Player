@model IEnumerable<Panda_Player.Models.PandaPlayer.Playlist>

@{
    ViewBag.Title = "My Playlists";
}


<h2>My Playlists</h2>

<p>
    @Ajax.ActionLink("Create New", "Create", new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "body" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PlaylistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublic)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PlaylistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsPublic)
            </td>
            <td>
                @Ajax.ActionLink("Edit", "Edit", new { id = item.Id }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "body" }) |
                @Ajax.ActionLink("Details", "Details", new { id = item.Id }, new AjaxOptions { HttpMethod = "GET", UpdateTargetId = "body" }) |
                @Html.Hidden("item-to-delete", "", new { @id = item.Id })
                <a href="#" class="btn btn-danger btn-sm" onclick="ConfirmDelete(@item.Id, '@($"{item.PlaylistName}")')">
                    <i class="glyphicon glyphicon-trash"></i>
                </a>
            </td>
        </tr>
    }

</table>

<input type="hidden" id="playlistId"  />
@Html.Partial("_ModalPopup")
